        <li class="nav-item">
          <%= link_to "Messages", "#", class: "btn btn-primary ml-1 mr-1" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached?%>
            <%= cl_image_tag current_user.photo.key, width: 45, height: 45, crop: :thumb, radius: :max, face: :center, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
