
<div class="container">
  <div class="text-center d-flex flex-row align-items-center justify-content-center mb-3 mt-3 overflow-auto">
    <%= link_to "Deals", deals_path, class: "btn btn-primary mt-2 mb-2 mr-2 ml-2", style:"width: 130px" %>
    <%= link_to "IPOs", ipos_path, class: "btn btn-primary mt-2 mb-2 mr-2 ml-2", style:"width: 130px" %>
    <%= link_to "Stocks", stocks_path, class: "btn btn-primary mt-2 mb-2 mr-2 ml-2", style:"width: 130px" %>
    <%= link_to "Portfolios", portfolios_path, class: "btn btn-primary mt-2 mb-2 mr-2 ml-2", style:"width: 130px" %>
  </div>
</div>

<div class="container mt-3 mb-3 text-justify overflow-auto">
  <h3 class="mt-2 mb-2 w-100">Recent comments</h3>

  <% @comments.each_with_index do |comment, index| %>

    <div id="accordion">
      <div class="card">
        <div class="card-header" id="heading<%= index.to_s %>">
          <h5 class="mb-0">
            <button class="btn btn-success w-100 text-left" data-toggle="collapse" data-target="#collapse<%= index.to_s %>" aria-expanded="true" aria-controls="collapse<%= index.to_s %>">
              <%= comment.date.strftime("%d/%m/%y") %> - <%= comment.category %> <% stock = Stock.find_by id: comment.stock_id %> - <strong><u><%= link_to stock.name, stock_path(stock), class: "text-white" %></u></strong>, <em>source: </em> <%= comment.source %>
            </button>
          </h5>
        </div>

      <div id="collapse<%= index.to_s %>" class="collapse show" aria-labelledby="heading<%= index.to_s %>" data-parent="#accordion">
        <div class="card-body">
          <%=raw comment.content %>
        </div>
      </div>
    </div>
  <% end %>
</div>


