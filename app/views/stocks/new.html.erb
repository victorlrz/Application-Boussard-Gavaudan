<h1>Create a new stock</h1>

    <div class="container">
        <%= simple_form_for @stock  do |f| %>
        <%= f.input :name %>
        <%= f.input :currency %>
        <%= f.input :identifier %>
        <%= f.input :sector, collection: ["Aerospace & Defense", "Airlines", "Automobiles", "Banks", "Basic Resources","Construction","Energy","Financials","Food & Beverage", "Health", "Healthcare", "Industrials", "Media", "Mining", "Oil & Gas", "Pharmaceuticals","Property", "Retail","Retail & Consumer","Support Services","Technology", "Travel & Leisure"] %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>

