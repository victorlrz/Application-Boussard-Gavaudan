<div class="container">
  <h1><%= @stock.name %></h1>
  <%= link_to "Create a new comment",  new_stock_comment_path(@stock), class: "btn btn-flat w-100 mb-2 mt-2 mr-2 ml-2"  %>

  <% @stock.comments.each do |comment| %>
    <h3> <%= comment.date.strftime("%d/%m/%y") %>, <%= comment.category %>, <em>source: <%= comment.source %></em></h3>
      <form>
        <input id="comment" value='<%= comment.content %>' type="hidden" name="content">
        <div class="trix-content"><% comment.content %></div>
        <trix-editor input="comment"></trix-editor>
      </form>
  <% end %>
</div>
