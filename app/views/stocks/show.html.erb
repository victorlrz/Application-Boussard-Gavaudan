<div class="container">
  <div class="row mt-3 mb-3">
    <h1><%= @stock.name %></h1>
      <%= link_to "Back to Stocks", stocks_path, class: "btn btn-primary btn-block mb-3 mr-5 ml-5", style:"width: 200px" %>
      <% if  @stock.price_1chg.split(" / ").last.to_f > 0%>
              <h2 class="text-success">Daily:  <%= @stock.price_1chg.split(" / ").last unless @stock.price_1chg.nil? %></h2>
            <% else %>
              <h2 class="text-danger">Daily: <%= @stock.price_1chg.split(" / ").last unless @stock.price_1chg.nil? %></h2>
          <% end %>
      <p class="text-justify"><%= @stock.earning %></p>
    <%= link_to "Create a new comment",  new_stock_comment_path(@stock), class: "btn btn-primary btn-block w-100 mb-2 mt-2 mr-2 ml-2"  %>
  </div>

<!--Accordion wrapper-->
<div class="accordion md-accordion border-top mb-3" id="accordionEx" role="tablist" aria-multiselectable="true">

  <!-- Accordion card -->
  <div class="card">

    <!-- Card header -->
    <div class="card-header" role="tab" id="headingOne1">
      <a data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne1" aria-expanded="true"
        aria-controls="collapseOne1">
        <h5 class="btn-success p-3 mb-0">
          Newsflow from Financials time (if any since beginning of the year) <i class="fas fa-angle-down rotate-icon"></i>
        </h5>
      </a>
    </div>

    <!-- Card body -->
    <div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1"
      data-parent="#accordionEx">
      <div class="card-body">
        <div class="stock_newsflow mb-3" data-toggle="collapse" data-name="<%= @stock.name %>" data-identifier="<%= @stock.identifier %>"></div>
      </div>
    </div>

  </div>
  <!-- Accordion card -->


  <div class="container text-justify overflow-auto">
   <% @stock.comments.order("date DESC").each do |comment| %>
      <div class="border-top mt-"></div>
      <h3 class="p-3 mb-2 bg-info text-white w-100 text-left mb-2 mt-2 mr-2 ml-2 rounded font-weight-light"> <%= comment.date.strftime("%d/%m/%y") %>, <%= comment.category %>, <em>source: <%= comment.source %></em></h3>
      <p><%=raw comment.content %></p>
    <% end %>
  </div>
</div>
