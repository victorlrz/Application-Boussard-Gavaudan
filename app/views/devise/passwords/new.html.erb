<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

<main class="main d-flex justify-content-center w-100">
    <div class="container d-flex flex-column">
      <div class="row h-100">
        <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
          <div class="d-table-cell align-middle">

            <div class="text-center mt-4">
              <h1 class="h2">Reset password</h1>
              <p class="lead">
                Enter your email to reset your password.
              </p>
            </div>

            <div class="card">
              <div class="card-body">
                <div class="m-sm-4">
                  <form>
                    <div class="form-group">
                      <%= f.input :email,
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "email" } %>
                    </div>
                    <div class="text-center mt-3">
                      <!-- <a href="dashboard-default.html" class="btn btn-lg btn-primary">Reset password</a> -->
                      <%= f.button :submit, "Send me reset password instructions", class:"btn btn-lg btn-primary" %>
                      <!-- <button type="submit" class="btn btn-lg btn-primary">Reset password</button> -->
                    </div>
                    <% end %>
                  </form>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </main>

<%= render "devise/shared/links" %>
