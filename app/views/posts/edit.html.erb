    <div class="container">
        <%= simple_form_for [@deal, @post]  do |f| %>
        <%= f.input :date, as: :string %>
        <%= f.association :deal, as: :hidden, input_html: { value: @deal.id } %>
        <%= f.input :category, collection: ["Funding", "Regulation/Antitrust", "Sector overview", "Market reaction", "Valuation"] %>
        <%= f.input :content %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>

