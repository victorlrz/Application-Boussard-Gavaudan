
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.2)), url(https://res.cloudinary.com/dtw3qvpgg/image/upload/v1582197640/background2_yzohoi.jpg);">
  <div class="container">
    <div class="row">
        <input class="form-control search-bar" type="text" placeholder="Search" aria-label="Search" id="search">
      </div>
    </div>
  </div>
</div>

  <div class="container">
      <div class="row text-center">
          <div class="col-3 col-md-3">
            <p><%= link_to "New Deal", new_deal_path %></p>
          </div>
          <div class="col-3 col-md-3">
            <p><%= link_to "New Acquirer", new_acquirer_path %></p>
          </div>
          <div class="col-3 col-md-3">
            <p><%= link_to "New Target", new_target_path %></p>
          </div>
          <div class="col-3 col-md-3">
            <p><%= link_to "New IPO", new_ipo_path %></p>
          </div>
      </div>

    <div class="row text-center">
          <div class="col-sm w-100">
            <%= link_to "Deals", deals_path, class: "btn btn-ghost" %>
          </div>
          <div class="col-sm w-100">
            <%= link_to "Acquirers", acquirers_path, class: "btn btn-ghost" %>
          </div>
          <div class="col-sm w-100">
            <%= link_to "Targets", targets_path, class: "btn btn-ghost" %>
          </div>
          <div class="col-sm w-100">
            <%= link_to "IPOs", ipos_path, class: "btn btn-ghost" %>
          </div>

      </div>

        <div class="deals">
          <h1 class="mt-3 mb-3">DEALS</h1>
            <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Target</th>
      <th scope="col">Date</th>
      <th scope="col">Deal</th>
      <th scope="col">Value</th>
      <th scope="col">Multiples</th>
      <th scope="col">Offer Price</th>
      <th scope="col">Share ratio</th>
      <th scope="col">More details</th>
    </tr>
  </thead>
  <tbody>
    <% @deals.each do |deal| %>
    <tr>
      <th scope="row" class="text-center justify-center"><%= cl_image_tag deal.target.target_logo.key, width: 150, height: 150, crop: :pad if deal.target.target_logo.attached? %></th>
      <td><%= deal.date.strftime("%d/%m/%y") %></td>
      <td><%= deal.acquirer.name %> takeover of <strong><%= deal.target.name %></td>
      <td><%= number_with_delimiter(deal.deal_value, delimiter: ",") %> m<%= deal.deal_currency %></td>
      <td><%= deal.valuation_multiple %>x <%= deal.valuation_type %></td>
      <td><%= deal.offer_price %> <%= deal.deal_currency if deal.offer_price %></td>
      <td><%= deal.ratio_shares %> <%= deal.acquirer.identifier if deal.ratio_shares %></td>
      <td><%= link_to "More details",  deal_path(deal), class: "btn btn-flat w-100 mb-2 mt-2 mr-2 ml-2" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

        </div>






