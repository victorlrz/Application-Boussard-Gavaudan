
  <div class="container mt-3 mb-3">
    <% if current_user.admin %>
      <div class="row text-center">
          <div class="col-3 col-md-3">
            <p><%= link_to "New Deal", new_deal_path, class: "btn btn-square btn-primary" %></p>
          </div>
          <div class="col-3 col-md-3">
            <p><%= link_to "New Acquirer", new_acquirer_path, class: "btn btn-square btn-primary" %></p>
          </div>
          <div class="col-3 col-md-3">
            <p><%= link_to "New Target", new_target_path, class: "btn btn-square btn-primary" %></p>
          </div>
          <div class="col-3 col-md-3">
            <p><%= link_to "New IPO", new_ipo_path, class: "btn btn-square btn-primary" %></p>
          </div>
      </div>
    <% end %>


      <div class="row text-center">
        <div class="col-3 col-md-3w-100">
          <%= link_to "Deals", deals_path, class: "btn btn-outline-primary" %>
        </div>
        <div class="col-3 col-md-3 w-100">
          <%= link_to "Stocks", stocks_path, class: "btn btn-outline-primary" %>
        </div>
        <div class="col-3 col-md-3 w-100">
          <%= link_to "Targets", targets_path, class: "btn btn-outline-primary" %>
        </div>
        <div class="col-3 col-md-3 w-100">
          <%= link_to "IPOs", ipos_path, class: "btn btn-outline-primary" %>
        </div>
      </div>

    <div class="deals border-top mt-2 mb-2">
      <h1 class="mt-3 mb-3 text-center">DEALS</h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col" class="text-center align-middle">Target</th>
              <th scope="col" class="text-center align-middle">Date</th>
              <th scope="col" class="text-center align-middle">Deal</th>
              <th scope="col" class="text-center align-middle">Value</th>
              <th scope="col" class="text-center align-middle">Multiples</th>
              <th scope="col" class="text-center align-middle">Offer Price</th>
              <th scope="col" class="text-center align-middle">Share ratio</th>
              <th scope="col" class="text-center align-middle">vs Mkt Cap</th>
              <th scope="col" class="text-center align-middle">More details</th>
            </tr>
          </thead>
          <tbody>
            <% @deals.each do |deal| %>
            <tr>
              <th scope="row" class="text-center justify-center"><%= cl_image_tag deal.target.target_logo.key, width: 100, height: 100, crop: :pad if deal.target.target_logo.attached? %></th>
              <td class="text-center align-middle"><%= deal.date.strftime("%d/%m/%y") %></td>
              <td class="text-center align-middle" style="width: 250px;"><%= deal.acquirer.name %> takeover of <strong><%= deal.target.name %></td>
              <td class="text-center align-middle" style="width: 130px;"><%= number_with_delimiter(deal.deal_value, delimiter: ",") %> m<%= deal.deal_currency %></td>
              <td class="text-center align-middle" style="width: 130px;"><%= deal.valuation_multiple %>x <%= deal.valuation_type %></td>
              <td class="text-center align-middle"><%= deal.offer_price %> <%= deal.deal_currency if deal.offer_price %></td>
              <td class="text-center align-middle"><%= deal.ratio_shares %> <%= deal.acquirer.identifier if deal.ratio_shares %></td>
              <td class="text-center align-middle" style="width: 130px;"><%= deal.target.ebitda.split("Market cap")[1].split("EPS")[0] unless deal.target.ebitda.split("Market cap")[1].nil?  %></td>
              <td class="text-center align-middle"><%= link_to "More details",  deal_path(deal), class: "btn btn-flat w-100 mb-2 mt-2 mr-2 ml-2" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>






