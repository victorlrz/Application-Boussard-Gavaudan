<div class="container">
  <%= link_to "Back to Deals", deals_path %>
  <%= link_to "Update this deal", edit_deal_path(@deal) %>
    <div class="card-trip">
      <div class="row col-6">
        <%= cl_image_tag @deal.acquirer.acquirer_logo.key, width: 150, height: 150, crop: :pad if @deal.acquirer.acquirer_logo.attached? %>
        <%= cl_image_tag @deal.target.target_logo.key, width: 150, height: 150, crop: :pad if @deal.target.target_logo.attached? %>
      </div>

      <div class="row col-6"><%= link_to "Deal presentation", @deal.pdf if @deal.pdf.attached?  %></div>
      <div class="row col-6"><%= link_to "Deal press release", @deal.press_release if @deal.press_release.attached? %></div>


        <div class="row col-12">
          <div class="col-6">
            <h2><%= @deal.target.name %> takeover by <%= @deal.acquirer.name %></h2>
            <p>Deal premium: <%= @deal.premium %>%</p>
            <p>Valuation: <%= @deal.valuation_multiple %>x <%= @deal.valuation_type %></p>
          </div>

          <div class="col-6">
            <p><%= @deal.comments %></p>
          </div>
        </div>
    <div class="row"><%= link_to "Create a Post", new_post_path  %></div>
</div>

