<h1>Create a new Document</h1>

<div class="container">
  <div class="col-8 col-md-6 justify-content-center align-items-center">
    <%= simple_form_for @document do |f| %>
      <%= f.input :name %>
      <%= f.input :title %>
      <%= f.input :date, as: :string %>
      <%= f.input :category %>
      <%= f.input :document_pdf, as: :file, input_html: { class: "btn btn-outline-primary" } %>
      <%= f.submit "Create", class: "btn btn-primary" %>
   <% end %>
  </div>
</div>



